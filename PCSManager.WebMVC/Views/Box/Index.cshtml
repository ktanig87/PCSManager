@model IEnumerable<PCSManager.Models.Box.BoxListItem>

@{
    ViewBag.Title = "Index";
}

<h2>All Boxes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
<div class="alert alert-success fade in" role="alert">

    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
    @TempData["SaveResult"]
</div>}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BoxId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BoxId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BoxId }) |
                @Html.ActionLink("Details", "Details", new { id = item.BoxId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BoxId })
            </td>
        </tr>
    }

</table>
